server {
       listen		*:443;
       server_name 	localhost;       
       charset          utf-8;
       client_max_body_size 75M;

       ssl   on;
       ssl_certificate	   {{ nginx_home }}/ssl/server.cert;
       ssl_certificate_key {{ nginx_home }}/ssl/server.key;       

       ssl_session_timeout  10m;
       ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

       location / {
        	auth_basic "Restricted";                    # For Basic Auth
        	auth_basic_user_file /etc/nginx/microservice.htpasswd;  # For Basic Auth

          proxy_pass http://localhost:3000;
    }  

}